---
import ColabCard from "../components/Colab_card.astro";
import Layout from "../layouts/Layout.astro";
import { getCollection, render } from "astro:content";
export async function getStaticPaths() {
    const contributors = await getCollection("contributors");
    return contributors.map((contributor) => ({
        params: {
            id: contributor.slug,
        },
        props: {
            contributor,
        },
    }));
}

const { contributor } = Astro.props;

const { data } = contributor;
const { colab_name, tec, email, user_img } = data;

const { Content } = await render(contributor);

export const prerender = true;
---

<Layout title="Kukulc4n â€¢ Contributors">
    <ColabCard
        colab_name={colab_name}
        tec={tec}
        email={email}
        user_img={user_img}
    />
    <Content />
</Layout>
