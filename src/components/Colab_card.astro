---
interface Props {
    key: string;
    colab_name: string;
    handle_tec: string;
    colab_email: string;
    colab_img: string;
}
const { colab_name, handle_tec, colab_email, colab_img, key } = Astro.props;
---

<div
    class="flex flex-col gap-2 p-8 sm:flex-row sm:items-center sm:gap-6 sm:py-4 bg-Colab_card_color border-2 rounded-lg border-Border_card/50"
>
    <img
        class="mx-auto block h-24 rounded-full sm:mx-0 sm:shrink-0"
        src={colab_img}
        alt=""
    />
    <div class="space-y-2 text-center sm:text-left">
        <div class="space-y-0.5">
            <p class="text-lg font-semibold text-Title_color">{colab_name}</p>
            <p class="font-medium text-Parafrafh_color">{handle_tec}</p>
            <p class="font-medium text-Parafrafh_color">{colab_email}</p>
        </div>
    </div>
</div>
